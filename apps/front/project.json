{
  "name": "front",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/front/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project front --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "dependsOn": ["generate:api", "generate:file-api"],
      "options": {
        "outputPath": "dist/apps/web"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "port": 3000,
        "buildTarget": "front:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/web/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "generate:api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sh {projectRoot}/scripts/generate-api.sh main"
      }
    },
    "generate:file-api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sh {projectRoot}/scripts/generate-api.sh file"
      }
    }
  }
}
